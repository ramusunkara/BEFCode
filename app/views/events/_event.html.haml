.row.event
  .col-md-4
  .col-md-8
    .details
      %p
        %b= event.short_event_date
      %h2= event.title
      %p
        %b= event.speaker
      %p
        Host:
        = event.host_name
      %p.location
        - if event.venue_street_address.present?
          = link_to event.venue_name, event.map_link
        %br
        = event.full_address
      - if event.photo_album_url.present?
        %p.photostream
          = link_to "View photos from this event", event.photo_album_url